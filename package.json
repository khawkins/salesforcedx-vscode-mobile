{
  "name": "salesforcedx-vscode-mobile",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.1.0",
  "publisher": "salesforce",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "qna": "https://github.com/salesforce/salesforcedx-vscode-mobile/issues",
  "homepage": "https://github.com/salesforce/salesforcedx-vscode-mobile/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/salesforce/salesforcedx-vscode-mobile/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/salesforce/salesforcedx-vscode-mobile.git"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "icon": "images/package-icon.png",
  "galleryBanner": {
    "color": "#ECECEC",
    "theme": "light"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "salesforcedx-vscode-offline-app.onboardingWizard",
        "title": "%extension.command.wizard.title%",
        "category": "%extension.command.category%"
      },
      {
        "command": "salesforcedx-vscode-offline-app.landingPage",
        "title": "%extension.command.landingPage.title%",
        "category": "%extension.command.category%"
      }
    ]
  },
  "volta": {
    "node": "16.20.0"
  },
  "scripts": {
    "clean": "rimraf out",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-coverage": "node ./out/test/runTest.js --coverage",
    "prettier:write": "prettier --write \"src/**/*.{ts, js}\"",
    "prettier:verify": "prettier --list-different \"src/**/*.{ts, js}\"",
    "bundle:extension": "esbuild ./src/extension.ts  --bundle --outdir=out --format=cjs --target=es2020 --platform=node --external:vscode --external:@oclif/core --minify --sourcemap",
    "vscode:prepublish": "npm run clean && npm run bundle:extension"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/sinon": "^10.0.15",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/l10n-dev": "^0.0.26",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.18.6",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "sinon": "^15.1.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@salesforce/core": "^3.36.2",
    "@salesforce/lwc-dev-mobile-core": "^3.1.0",
    "@salesforce/sf-plugins-core": "^3.0.1",
    "@vscode/l10n": "^0.0.14"
  }
}
